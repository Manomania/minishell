 *
 * @param ctx context
 */
void	ctx_clear(t_ctx *ctx)
{
	if (!ctx)
		return ;
	if (ctx->tokens)
		free_all_token(ctx->tokens);
	ctx->tokens = NULL;
	if (ctx->cmd)
		free_command(ctx->cmd);
	ctx->cmd = NULL;
	clear_history();
	rl_free_line_state();
	rl_cleanup_after_signal();
	if (ctx->fd_file_in != -1)
		close(ctx->fd_file_in);
	if (ctx->fd_file_out != -1)
		close(ctx->fd_file_out);
	if (ctx->env_list)
		free_env_list(ctx->env_list);
	free(ctx);
}
