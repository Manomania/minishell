		ft_printf(YELLOW "  No arguments\n" RESET);
		return ;
	}
	ft_printf(YELLOW "  Arguments:\n" RESET);
	while (i < cmd->arg_count)
	{
		display_value = get_display_value(cmd->args[i]);
		ft_printf(GREEN "    Arg %d: " RESET "%s\n", i, display_value);
		free(display_value);
		i++;
	}
